<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8eff8f3">

    <TextView
        android:id="@+id/TextDilan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Dilan Cepmek"
        android:textSize="24dp"
        android:textColor="#fc032c" />

    <ImageView
        android:id="@+id/ImageDilan"
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:src="@drawable/dilanimage"
        android:layout_below="@+id/TextDilan"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/Btn1"
        android:text="Button 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageDilan"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"


        />

    <Button
        android:id="@+id/Btn2"
        android:text="Button 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageDilan"
        android:layout_toRightOf="@+id/Btn1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
    />

    <Button
        android:id="@+id/Btn3"
        android:text="Buton 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/ImageDilan"
        android:layout_toRightOf="@+id/Btn2"

        />
</RelativeLayout>